{
  "name": "silo-monitoring-api",
  "version": "1.0.0",
  "description": "Industrial Silo Temperature Monitoring System - Node.js Clean Architecture",
  "main": "optimizedApp.js",
  "type": "module",
  "scripts": {
    "start": "node devApp.js",
    "start:optimized": "node optimizedApp.js",
    "start:cluster": "CLUSTER_MODE=true node optimizedApp.js",
    "start:production": "NODE_ENV=production CLUSTER_MODE=true node optimizedApp.js",
    "dev": "nodemon devApp.js",
    "dev:optimized": "nodemon optimizedApp.js",
    "dev:debug": "nodemon --inspect devApp.js",
    "test": "jest --verbose --detectOpenHandles",
    "test:watch": "jest --watch --verbose",
    "test:coverage": "jest --coverage --verbose",
    "test:performance": "jest --testNamePattern=\"Performance\" --verbose",
    "benchmark": "node scripts/benchmark.js",
    "health": "curl http://localhost:3000/health",
    "lint": "eslint . --ext .js",
    "format": "prettier --write ."
  },
  "keywords": [
    "silo",
    "temperature",
    "monitoring",
    "nodejs",
    "mysql",
    "clean-architecture"
  ],
  "author": "Eng. Bashar Mohammad Zabadani <basharagb@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.2.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.9.7"
  },
  "devDependencies": {
    "nodemon": "^3.1.4",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"]
  }
}
