# ==============================
# ðŸš€ Production Environment Configuration
# High-Performance Silo Monitoring API
# ==============================

# Server Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Performance Settings
CLUSTER_MODE=true
MAX_CONNECTIONS=1000
KEEP_ALIVE_TIMEOUT=65000

# Database Configuration (High Performance)
DB_HOST=localhost
DB_PORT=3306
DB_USER=silo_user
DB_PASSWORD=your_secure_password
DB_NAME=silo_monitoring
DB_CONNECTION_LIMIT=50
DB_ACQUIRE_TIMEOUT=60000
DB_TIMEOUT=60000

# Cache Configuration
CACHE_TTL_DEFAULT=300
CACHE_TTL_READINGS=60
CACHE_TTL_ALERTS=30
CACHE_TTL_SILOS=300
CACHE_MAX_SIZE=1000

# Security Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Monitoring
ENABLE_METRICS=true
METRICS_INTERVAL=30000
HEALTH_CHECK_INTERVAL=60000

# SMS Configuration
SMS_PROVIDER=local
SMS_API_KEY=your_sms_api_key
SMS_FROM_NUMBER=+1234567890

# Alert Configuration
ALERT_CRITICAL_TEMP=60
ALERT_WARNING_TEMP=45
ALERT_DISCONNECT_TEMP=-127.0

# Performance Monitoring
SLOW_QUERY_THRESHOLD=100
ENABLE_QUERY_LOGGING=false
ENABLE_PERFORMANCE_TRACKING=true
